<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ImageView for the burrito image -->
            <ImageView
                android:id="@+id/ivBurritoImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/your_burrito_image"
                android:scaleType="centerCrop" />

            <!-- TextView for the burrito title -->
            <TextView
                android:id="@+id/tvBurritoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Classic Burrito"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

            <!-- TextView for the burrito Price -->
            <TextView
                android:id="@+id/tvBurritoPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price: $"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginTop="4dp"/>


            <Button
                android:id="@+id/btnAddToCartCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add to Cart"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>