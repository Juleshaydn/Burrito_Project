<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="8dp">

    <LinearLayout
        android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <!-- ImageView for the burrito image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivBurritoImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/your_burrito_image"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:shapeAppearance="@style/RoundedImageView" />


    <!-- TextView for the burrito title -->
    <TextView
        android:id="@+id/tvBurritoTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Classic Burrito"
        android:padding="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <!-- TextView for the burrito Price -->
    <TextView
        android:id="@+id/tvBurritoPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price: $"
        android:padding="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="4dp"/>

        <Button
            android:id="@+id/btnAddToCartCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add to Cart"
            android:background="@drawable/button_rounded"
        android:layout_marginTop="8dp" />

</LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    </layout>
