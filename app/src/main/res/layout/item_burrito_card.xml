<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ImageView for the burrito image -->
            <ImageView
                android:id="@+id/ivBurritoImage"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/your_burrito_image"
                android:scaleType="centerCrop" />

            <!-- TextView for the burrito title -->
            <TextView
                android:id="@+id/tvBurritoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Classic Burrito"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

            <!-- TextView for the burrito description -->
            <TextView
                android:id="@+id/tvBurritoDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A delicious classic burrito with your choice of fillings."
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>
